{
  "name": "deCONZ",
  "version": "2.05.51",
  "slug": "deconz",
  "description": "Controller software for the Conbee USB Gateway from Dresden Elektronik",
  "startup": "services",
  "boot": "auto",
  "hassio_api": false,
  "homeassistant_api": false,
  "host_network": true,
  "webui": "http://[HOST]:[PORT:8234]/pwa/login.html",
  "auto_uart":true,
  "map": [
    "config:rw"
  ],
  "options": {
    "httpport": 8234,
    "wsport": 8235,
    "conbee": true,
    "xpra": false
  },
  "schema": {
    "httpport": "port",
    "wsport": "port",
    "conbee": "bool",
    "xpra": "bool"
  },
  "ports": {
    "8234/tcp": 8234,
    "8235/tcp": 8235,
    "8236/tcp": 8236
  }
}
